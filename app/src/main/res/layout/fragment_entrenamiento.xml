<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallasPrincipales.principales.Entrenamiento.EntrenamientoFragment">

    <TextView
        android:id="@+id/tituloEntrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="Rutina"
        android:textStyle="bold"
        android:textColor="@color/colorVerde"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCrearRutina"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/azulBotones"
        android:radius="20dp"
        android:text=" + Rutina"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tituloRutinasCreadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCrearEjercicio" />

    <Button
        android:id="@+id/btnCrearEjercicio"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/azulBotones"
        android:radius="20dp"
        android:text="+ Ejercicio"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tituloRutinasCreadas"
        app:layout_constraintEnd_toStartOf="@+id/btnCrearRutina"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tituloRutinasCreadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Tus Rutinas"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/rvListaRutinas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloEntrenamiento" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaRutinas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloRutinasCreadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"/>








</androidx.constraintlayout.widget.ConstraintLayout>