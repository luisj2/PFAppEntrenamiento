<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragments.Training.ExerciseFragment">

    <TextView
        android:id="@+id/tvExerciseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:textStyle="bold"
        android:text="EJERCICIOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnNavigateToCreateExerciseActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvExerciseTitle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:text="+"/>

    <TextView
        android:id="@+id/tvNoExercisesAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Ejercicios aÃ±adidos"
        app:layout_constraintEnd_toEndOf="@id/rvExercises"
        app:layout_constraintStart_toStartOf="@id/rvExercises"
        app:layout_constraintTop_toTopOf="@id/rvExercises"
        app:layout_constraintBottom_toBottomOf="@id/rvExercises"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExercises"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvExerciseTitle"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="8dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>